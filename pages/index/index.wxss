.loading-box{
    position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
    background-color: #fff;
    z-index: 98;
}

.loading{
    position: absolute;
    left: calc(50% - 30rpx);
    top: calc(50% - 30rpx);
}