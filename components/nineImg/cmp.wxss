/* components/nineImg/cmp.wxss */

.container{
    width: 700rpx;
}

.img-container{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 700rpx;
    height: 700rpx;
    overflow: hidden;
    position: relative;
}

.img-container .image{
    width: 31%;
    height: 31%;
}

.text-container{
    font-size: 40rpx;
    letter-spacing: 2rpx;
    font-weight: 400;
    padding: 0 30rpx;
}

.img-num{
    position: absolute;
    right: 80rpx;
    bottom: 80rpx;
    background-color: rgba(0,0,0,.7);
    font-size: 24rpx;
    color: #fff;
    padding: 5rpx 10rpx;
}