/* components/article/cmp.wxss */
.container{
    background-color: #fff;
    margin-top: 30rpx;
    overflow: hidden;
}

.mark-container{
    padding: 20rpx;
}

.avatar{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    vertical-align: middle;
}

.text{
    font-size: 28rpx;
    color: #666;
}

.control-container{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    margin-top: 10rpx;
}

.control-box{
    display: flex;
}

.box{
    /* 自定义组件如果不设block，一些css属性是设置不上的 */
    display: block;
    margin-left: 25rpx;
}

.img-btn {
    width: 50rpx;
    height: 50rpx;
}

.img-btn image{
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 10rpx;
}