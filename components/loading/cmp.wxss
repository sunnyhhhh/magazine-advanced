/* components/loading/cmp.wxss */

.container{
    width: 60rpx;
    height: 60rpx;
    position: relative;
    margin: 30rpx auto 0;
}

.circle{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.6);
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
    animation: run 2s infinite;
}

.delay{
    animation-delay: 1s;
}

@keyframes run{
    0%{
        transform: scale(0);
    }
    50%{
        transform: scale(1);
    }
    100%{
        transform: scale(0)
    }
}